/* to add transparency to an element */

<!DOCTYPE html>
<html>
<head>
<style>
    div{
        background-color: blue;
        padding: 20px;
    }
    
    div.one{
        opacity: 0.7;
    }
    
    div.two{
        opacity: 0.4;
    }
    
    div.three{
        opacity: 1; 
    }
    
</style>
</head>
<body>
    <h1>Opacity Example</h1>
    <div class="one">Opacity = 0.7</div>
    <div class="two">Opacity = 0.4</div>
    <div class="three">Opacity = 0.1</div>   
</body>
</html>

